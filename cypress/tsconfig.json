{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",          // React JSX for React 17+ projects
    "moduleResolution": "node",  // Common setting for module resolution
    "esModuleInterop": true,     // For smooth imports of CommonJS modules
    "skipLibCheck": true         // Skip checking of library files to improve performance
  },
  "include": [
    "cypress/**/*.ts",           // Include all Cypress test files
    "../client/src/**/*.tsx"     // Include the client components (like Quiz.tsx)
  ],
  "exclude": [
    "node_modules"               // Exclude node_modules as usual
  ]
}
