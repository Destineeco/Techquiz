{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",  // Use react-jsx if using React 17 or higher
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "cypress/**/*.ts",   // Include Cypress test files
    "../client/src/**/*.tsx" // Include the client components (like Quiz.tsx)
  ],
  "exclude": [
    "node_modules"
  ]
}
